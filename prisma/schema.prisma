// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int       @id @default(autoincrement())
  first_name String
  last_name  String
  mobile     Int      // Assuming mobile is numeric
  password   String
  role       String
  isActive   Boolean
  address    String
}


model products {
  id               Int      @id @default(autoincrement())
  productName      String
  price            Int
  inventory        Int
  barcode          Int
  numberInPack     Int
  coloring         Int
  size             String
  image            String
  category         String
  season           String
  description      String
  slug             String
  validationValue  Int
}